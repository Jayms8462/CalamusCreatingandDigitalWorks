<main class="signup-page">
  <section class="signup-section">
    <h2>Create Your Account</h2>
    <form id="signup-form">
      <!-- Name -->
      <label for="name">Full Name *</label>
      <input type="text" id="name" name="name" required minlength="2" maxlength="100">

      <!-- Email -->
      <label for="email">Email *</label>
      <input type="email" id="email" name="email" required>

      <!-- Password -->
      <label for="password">Password *</label>
      <input type="password" id="password" name="password" required minlength="8">
      <small>Password must be at least 8 characters, contain 1 number and 1 special character.</small>

      <!-- Phone -->
      <label for="phone">Phone Number *</label>
      <input type="tel" id="phone" name="phone" required pattern="[0-9+\-\s]{7,15}">

      <!-- Company -->
      <label for="company">Company Name *</label>
      <input type="text" id="company" name="company" required>

      <!-- Industry -->
      <label for="industry">Industry *</label>
      <input type="text" id="industry" name="industry" required>

      <!-- Project Description -->
      <label for="project">Project Description *</label>
      <textarea id="project" name="project" rows="4" required></textarea>

      <!-- How did you hear -->
      <label for="referral">How did you hear about us?</label>
      <input type="text" id="referral" name="referral">

      <!-- Submit -->
      <button type="submit">Sign Up</button>
    </form>
    <p class="login-link">Already have an account? <a href="/login">Login</a></p>
  </section>
</main>
